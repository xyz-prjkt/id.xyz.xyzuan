<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/GraphiteBlack"
    tools:context=".Dashboard">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Game Zone"
            android:fontFamily="@font/ios_bold"
            android:textSize="42sp"
            android:textColor="@color/white"
            android:layout_margin="25dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Playing game make your mood feels good"
            android:fontFamily="@font/ios_regular"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:layout_marginTop="-25dp"
            android:layout_marginLeft="25dp"/>

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:rowCount="4"
            android:columnCount="1"
            android:layout_margin="25dp"
            android:alignmentMode="alignMargins"
            android:layout_gravity="center_horizontal"
            android:columnOrderPreserved="false">

            <androidx.cardview.widget.CardView
                android:id="@+id/game_snake"
                android:layout_width="325dp"
                android:layout_height="150dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="5dp"
                android:layout_margin="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
					android:background="@xml/game_snake"
                    android:orientation="vertical"
                    android:gravity="left|center">
                    
                    <ImageView
                        android:layout_width="56dp"
                        android:layout_height="56dp"
						android:layout_marginLeft="20dp"
                        android:src="@drawable/game_snake"
                    />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Snake Zubb ( Alpha )"
                        android:fontFamily="@font/ios_bold"
                        android:textSize="24sp"
                        android:textColor="@color/black"
                        android:layout_marginTop="5dp"
						android:layout_marginLeft="20dp"
                    />
				
					<TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Makan Sampai Kenyang , yummy :p"
                        android:fontFamily="@font/ios_medium"
                        android:textSize="15sp"
                        android:textColor="@color/black"
                        android:layout_marginTop="-4dp"
						android:layout_marginLeft="20dp"
                    />
				
                </LinearLayout>

            </androidx.cardview.widget.CardView>
			
			<androidx.cardview.widget.CardView
                android:layout_width="325dp"
                android:layout_height="150dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="5dp"
				android:layout_margin="10dp">               

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
					android:background="@xml/game_tank"
                    android:orientation="vertical"
                    android:gravity="left|center"
                    >

                    <ImageView
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:src="@drawable/game_tank"
						android:layout_marginLeft="20dp"
                    />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Battle Tank ( Unreleased )"
                        android:fontFamily="@font/ios_bold"
                        android:textSize="24sp"
                        android:textColor="@color/white"
                        android:layout_marginTop="5dp"
						android:layout_marginLeft="20dp"
                    />
				
					<TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dor Dorr Jlummmb Duarr . . ."
                        android:fontFamily="@font/ios_medium"
                        android:textSize="15sp"
                        android:textColor="@color/white"
                        android:layout_marginTop="-4dp"
						android:layout_marginLeft="20dp"
                    />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </GridLayout>

    </LinearLayout>

</ScrollView>
